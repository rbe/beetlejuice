                    <url>${maven.local.snapshots}</url>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                </repository>
                <repository>
                    <id>local-releases</id>
                    <name>local-releases</name>
                    <url>${maven.local.releases}</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                </repository>
            </repositories>
            <distributionManagement>
                <site>
                    <id>localsite</id>
                    <url>${maven.local.site}/${project.groupId}</url>
                </site>
                <snapshotRepository>
                    <id>local-snapshots</id>
                    <name>local-snapshots</name>
                    <url>${maven.local.snapshots}</url>
                </snapshotRepository>
                <repository>
                    <id>local-releases</id>
