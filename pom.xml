        <!-- github -->
        <profile>
            <id>github</id>
            <properties>
                <github.global.server>github</github.global.server>
            </properties>
            <build>
                <pluginManagement>
                    <plugins>
                        <!-- site-maven-plugin -->
                        <plugin>
                            <groupId>com.github.github</groupId>
                            <artifactId>site-maven-plugin</artifactId>
                            <version>0.8</version>
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <!-- maven-deploy-plugin -->
                    <plugin>
                        <artifactId>maven-deploy-plugin</artifactId>
                        <version>2.7</version>
                        <configuration>
                            <altDeploymentRepository>
                                internal.repo::default::file:///${project.build.outputDirectory}/target/mvn-repo
                            </altDeploymentRepository>
                        </configuration>
                    </plugin>
                    <!-- site-maven-plugin -->
                    <plugin>
                        <groupId>com.github.github</groupId>
                        <artifactId>site-maven-plugin</artifactId>
                        <executions>
                            <!-- gh-pages -->
                            <execution>
                                <id>gh-pages</id>
                                <goals>
                                    <goal>site</goal>
                                </goals>
                                <phase>site</phase>
                                <configuration>
                                    <message>Creating site for ${project.version}</message>
                                    <dryRun>false</dryRun>
                                    <force>false</force>
                                    <merge>false</merge>
                                    <noJekyll>false</noJekyll>
                                    <outputDirectory>target/site</outputDirectory>
                                    <branch>refs/heads/gh-pages</branch>
                                    <includes>
                                        <include>**/*</include>
                                    </includes>
                                    <repositoryOwner>rbe</repositoryOwner>
                                </configuration>
                            </execution>
                            <!-- mvn-repo -->
                            <execution>
                                <id>mvn-repo</id>
                                <goals>
                                    <goal>site</goal>
                                </goals>
                                <phase>deploy</phase>
                                <configuration>
                                    <message>Maven artifacts for ${project.version}</message>
                                    <dryRun>false</dryRun>
                                    <force>false</force>
                                    <merge>false</merge>
                                    <noJekyll>true</noJekyll>
                                    <outputDirectory>target/mvn-repo</outputDirectory>
                                    <branch>refs/heads/mvn-repo</branch>
                                    <includes>
                                        <include>**/*</include>
                                    </includes>
                                    <repositoryOwner>rbe</repositoryOwner>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <distributionManagement>
                <repository>
                    <id>github</id>
                    <name>GitHub ${project.artifactId} Repository</name>
                    <url>https://raw.github.com/rbe/${project.artifactId}/mvn-repo</url>
                </repository>
            </distributionManagement>
        </profile>
